<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_CURP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Datos CURP"/>

        <TextView
            android:id="@+id/txt_CodigoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Código de verificación:"/>

        <TextView
            android:id="@+id/txt_Codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_ApellidoPTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Apellido paterno:"/>

        <TextView
            android:id="@+id/txt_ApellidoP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_ApellidoMTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Apellido materno:"/>

        <TextView
            android:id="@+id/txt_ApellidoM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_NombreTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Nombre(s):"/>

        <TextView
            android:id="@+id/txt_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_SexoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Sexo:"/>

        <TextView
            android:id="@+id/txt_Sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_FechaNTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Fecha de nacimiento:"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_FechaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="/"/>

            <TextView
                android:id="@+id/txt_FechaM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:text="/"/>

            <TextView
                android:id="@+id/txt_FechaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_EntidadFTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:text="Entidad federativa:"/>

        <TextView
            android:id="@+id/txt_EntidadF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txt_CURPGenerada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="CURP Generada"/>

        <TextView
            android:id="@+id/txt_CURPGeneradaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</ScrollView>